
pipeline {
    agent any

    stages {
        stage('Build') {
            agent any
            steps {
                echo 'Build'
                sh 'docker build -f Dockerfile -t website:latest .'

            }
        }

        stage('Test') {
            steps {
                sh 'npm install --save express'
                sh 'npm install --save-dev jest'
                sh 'npm install --save-dev supertest'
                sh 'npm run test'
            }
        }
    }
}