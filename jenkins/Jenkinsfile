
pipeline {
    agent any

    stages {

        // stage('SonarQube analysis') {
        //   steps {
        //     script {
        //         scannerHome = tool 'sonar-scanner'
        //     }
        //     withSonarQubeEnv('sonarqube-server') {
        //       sh "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey=develop"
