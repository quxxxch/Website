        stage('Build') {
            agent any
            steps {
                sh '/usr/local/bin/docker build -f Dockerfile -t website:latest .'

            }
        }

        stage('Test') {
            steps {
                sh 'docker run -it --rm website:latest npm test'
            }
        }

        stage('Deploy') {
            steps {
                sh 'docker run -d -it --rm -p 3000:3000 --name my_website website:latest'
            }
        }
    }
}
