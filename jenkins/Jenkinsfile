
pipeline {
    agent any

    stages {

        stage('SonarQube analysis') {
          steps {
            sh 'export PATH=$PATH:/opt/homebrew/Cellar/openjdk/21.0.3/bin'
            script {
                scannerHome = tool 'sonar-scanner'
            }
            withSonarQubeEnv('sonar-server') {
              sh "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey=develop"
            }
          }
        }

        stage('Build') {
            agent any
            steps {
                sh '/usr/local/bin/docker build -f Dockerfile -t website:latest .'

            }
        }

        stage('Test') {
            steps {
                sh '/usr/local/bin/docker run --rm website:latest npm test'
            }
        }

        stage('Deploy') {
            steps {
                sh '/usr/local/bin/docker run -d --rm -p 3000:3000 --name my_website website:latest'
            }
        }
    }
}
